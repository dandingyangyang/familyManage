<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>预归档文件</h1>
    <ol class="breadcrumb">
        <li><a href="http://127.0.0.1:3000/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">yuguidang</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">预归档</h3>
                    <span class="pull-right-container">
                        <p class="pull-right"><font size="3" face="arial" color="red">{{error}}</font></p>
                    </span>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="yuguidangtable" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>编号</th>
                            <th>文件名</th>
                            <th>文件日期</th>
                            <th>保管日期</th>
                            <th>路径</th>
                            <th>责任者</th>
                            <th>密级</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each files}}
                            <tr>
                                {{#if isdirectory}}
                                    <td style="width: 10px"><span class="fa fa-folder-open"></span></td>
                                {{else}}
                                    <td style="width: 10px"><span class="fa fa-file"></span></td>
                                {{/if}}
                                <td>{{id}}</td>
                                <td><a href="/yuguidang{{path}}{{name}}?isdir={{isdirectory}}&fileid={{id}}">{{name}}</a></td>
                                <td>{{filetime}}</td>
                                <td>{{savetime}}</td>
                                <td>{{path}}</td>
                                <td>{{responsibleperson}}</td>
                                <td>{{confidentialitype}}</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" onclick="window.location.href='/yuguidang/?isdir=1&guidang=1&fileid={{id}}'" class="btn btn-success">归档</button>
                                        <button type="button" onclick="window.location.href='/yuguidang/?isdir=1&shanchu=1&fileid={{id}}'" class="btn btn-danger">删除</button>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>


