<section class="content-header">
  <form class="form-horizontal" action="/personCenter/diary/write" method="post">
    <div class="box-body">
      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">标题</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" name="title" value={{title}}>
        </div>
      </div>
      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">内容</label>
        <div class="col-sm-10">
           <textarea id="content" name="content" style="width: 100%;height: 400px">{{content}}</textarea>
        </div>       
      </div>
      <div style="display: none">
        <input value={{id}} name="id"/>
      </div>
      <div class="pull-right">
        <button id="cancelWrite" type="button" class="btn btn-default">取消</button>
        <button type="submit" class="btn btn-info">确定</button>
      </div>     
    </div>
  </form>
</section>
<script src="/plugins/jQuery/jquery-2.2.3.min.js"></script>
